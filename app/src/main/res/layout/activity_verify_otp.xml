<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forget_page"
    >

    <TextView
        android:id="@+id/votvtopcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@color/cardview_shadow_start_color"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/votventerotp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="130sp"
        android:text="Enter your OTP"
        android:textSize="22sp"
        android:layout_below="@+id/votvtopcolor"
        />


    <EditText
        android:id="@+id/voetotp_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votventerotp"
        android:layout_marginStart="19sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:hint="    "
        android:inputType="number"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/voetotp_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votventerotp"
        android:layout_toRightOf="@+id/voetotp_1"
        android:layout_marginStart="16sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:hint="    "
        android:inputType="number"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/voetotp_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votventerotp"
        android:layout_toRightOf="@+id/voetotp_2"
        android:layout_marginStart="16sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:hint="    "
        android:inputType="number"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/voetotp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/votventerotp"
        android:layout_toRightOf="@+id/voetotp_3"
        android:layout_marginStart="16sp"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"
        android:hint="    "
        android:inputType="number"
        android:textSize="35sp" />

    <Button
        android:id="@+id/vobtnverifyotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify otp"
        android:layout_margin="30sp"
        android:layout_below="@+id/voetotp_4"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>