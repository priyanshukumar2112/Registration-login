<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registeration_page"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <TextView
    android:id="@+id/rptvsignup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sign Up"
    android:textAlignment="center"
    android:layout_marginTop="15sp"
    android:layout_marginStart="15sp"
    android:textSize="40sp"
    android:textStyle="bold"/>

    <TextView
    android:id="@+id/rptvemail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Email"
    android:layout_marginStart="20sp"
    android:textSize="20sp"
    android:layout_below="@+id/rptvsignup"
    />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rpetemail"
        android:textSize="18sp"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/rptvemail"
        android:layout_marginStart="15sp"
        />

    <TextView
        android:id="@+id/rptvname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/rpetemail"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rpetname"
        android:textSize="18sp"
        android:inputType="text"
        android:layout_below="@+id/rptvname"
        android:layout_marginStart="15sp"
        />

    <TextView
        android:id="@+id/rptvphno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/rpetname"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rpetphno"
        android:textSize="18sp"
        android:inputType="phone"
        android:layout_below="@+id/rptvphno"
        android:layout_marginStart="15sp"
        />
    <TextView
        android:id="@+id/rptvpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/rpetphno"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rpetpassword"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:layout_below="@+id/rptvpassword"
        android:layout_marginStart="15sp"
        />
    <TextView
        android:id="@+id/rptvcnfpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm your password"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/rpetpassword"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rpetcnfpassword"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:layout_below="@+id/rptvcnfpassword"
        android:layout_marginStart="15sp"
        />
    <TextView
        android:id="@+id/rptvgender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_marginTop="15sp"
        android:layout_marginStart="20sp"
        android:textSize="20sp"
        android:layout_below="@+id/rpetcnfpassword"
        />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rprg">
            <RadioButton
                android:id="@+id/rprbmale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                />
            <RadioButton
                android:id="@+id/rprbfemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                />
            <RadioButton
                android:id="@+id/rprbother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="other"
                />
            </RadioGroup>

    <Button
        android:id="@+id/rpbtnregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_gravity="center"
        android:layout_marginBottom="25sp"
        />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
    </LinearLayout>